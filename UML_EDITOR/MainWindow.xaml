<Window x:Class="Lab5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab5"
        mc:Ignorable="d"
        KeyDown="Window_KeyDown"
        Title="MainWindow" Height="550" Width="950" MouseUp="Window_MouseUp">
    <Window.Resources>
        <ItemsPanelTemplate x:Key="cnv">
            <Canvas/>
        </ItemsPanelTemplate>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
            <Button Content=" New " Height="40" Width="80" Click="Button_New"/>
            <Button Content=" Load " Height="40" Width="80" Click="Button_Load"/>
            <Button Content=" Save " Height="40" Width="80" Click="Button_Save"/>
            <Button Content=" New_tab " Height="40" Width="80" Click="Button_newTab"/>
            <Grid Height="40" Width="80" x:Name="Grid_create" Visibility="Collapsed">
                <StackPanel Orientation="Vertical">
                    <TextBox x:Name="textBox_nameDiag" Height="19" Width="80" TextAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap" Text="Имя введи"
                      HorizontalAlignment="Center" FontSize="10" SpellCheck.IsEnabled="True"/>
                    <Button x:Name="CreateButton" Content=" Create " Height="21" Width="80" Click="CreateButton_Click" Visibility="Visible"/>
                    <Button x:Name="EditButton" Content=" Edit " Height="21" Width="80" Click="EditButton_Click" Visibility="Collapsed"/>
                </StackPanel>
            </Grid>
            <!--<Button Content=" New_window " Height="40" Width="80" Click="Button_newWindow"/>-->
            <TextBlock Height="40" Width="80" x:Name="x_txt" TextAlignment="Center"/>
            <TextBlock Height="40" Width="80" x:Name="y_txt" TextAlignment="Center"/>
            <TextBlock Height="40" Width="80" x:Name="x_e" TextAlignment="Center"/>
            <TextBlock Height="40" Width="80" x:Name="y_e" TextAlignment="Center"/>
            <StackPanel Orientation="Vertical">
                <TextBlock Text="Type of node" Margin="2"/>
                <RadioButton Margin="2" Content="Square" Checked="Square_Checked" IsChecked="True" VerticalAlignment="Center"/>
                <RadioButton Margin="2" Content="Oval" Checked="Oval_Checked" VerticalAlignment="Center"/>
            </StackPanel>
            <StackPanel Orientation="Vertical">
                <TextBlock Text="Type of Line" Margin="2"/>
                <RadioButton Margin="2" x:Name="Line_Equal" Content="Equal" IsChecked="True"  VerticalAlignment="Center" Checked="Line_Equal_Checked"/>
                <RadioButton Margin="2" x:Name="Line_Anchor" Content="Anchor" VerticalAlignment="Center" Checked="Line_Anchor_Checked"/>
            </StackPanel>
        </StackPanel>
        
        <TabControl Grid.Row="1"  Name="tabControl1">
            <TabControl.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" MouseDown="StackPanel_MouseDown">
                        <TextBlock Text="{Binding HeaderName}"/>
                        <TextBlock Text="  "/>
                        <Image Source="icons\close.png" Width="12" Height="12" MouseDown="Image_MouseDown"/>
                    </StackPanel>
                </DataTemplate>
            </TabControl.ItemTemplate>
            <TabControl.ContentTemplate>
                <DataTemplate>
                    <Grid>
                        <ItemsControl ItemsSource="{Binding Nodes}" ItemsPanel="{StaticResource cnv}"
                                      MouseDown="ItemsControl_MouseDown" 
                                      MouseMove="ItemsControl_MouseMove"
                                      MouseUp="ItemsControl_MouseUp"
                                      Background="#01FFFFFF">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="Blue" BorderThickness="2" Background="#EEF" 
                                        CornerRadius="{Binding Corner}" Loaded="Border_Loaded"
                                        MouseDown="Border_MouseDown"
                                        MouseMove="Border_MouseMove"
                                        MouseUp="Border_MouseUp" x:Name="border_node" >

                                        <Border.RenderTransform>
                                            <TransformGroup>
                                                <!--<TranslateTransform x:Name="bord_transform"/>-->
                                                <TranslateTransform X="-40" Y="-20"/>
                                                <TranslateTransform X="{Binding Pos.X}" Y="{Binding Pos.Y}"/>
                                            </TransformGroup>

                                        </Border.RenderTransform>
                                        <Border.BitmapEffect>
                                            <DropShadowBitmapEffect Opacity="{Binding ShadowOpacity}"/>
                                        </Border.BitmapEffect>
                                        <Grid>
                                            <TextBox x:Name="tbx" BorderBrush="Transparent" Background="Transparent" Focusable="True"
                           Text="{Binding Text, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" FontSize="16" Margin="10" Visibility="{Binding EditModeVisibility}"/>
                                            <TextBlock Text="{Binding Text}" FontSize="16" Margin="10" Visibility="{Binding ViewModeVisibility}"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                        
                        <Rectangle x:Name="selectRegion" Stroke="#B07F" StrokeThickness="2" Fill="#207F" Width="200" Height="200" Visibility="Collapsed"
                                 HorizontalAlignment="Left" VerticalAlignment="Top" MouseMove="selectRegion_MouseMove" MouseUp="selectRegion_MouseUp">
                            <Rectangle.RenderTransform>
                                <TranslateTransform x:Name="tt"/>
                            </Rectangle.RenderTransform>
                        </Rectangle>

                        <ItemsControl ItemsSource="{Binding Edges}" ItemsPanel="{StaticResource cnv}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Line X1="{Binding A.Pos.X}" Y1="{Binding A.Pos.Y}" X2="{Binding B.Pos.X}" Y2="{Binding B.Pos.Y}" 
                      Stroke="Green" StrokeThickness="10" MouseDown="Line_MouseDown" Loaded="Line_Loaded" StrokeDashArray="{Binding Dash}">
                                        <Line.BitmapEffect>
                                            <DropShadowBitmapEffect Opacity="{Binding ShadowOpacity}"/>
                                        </Line.BitmapEffect>
                                    </Line>
                                    <!--<Line X1="{Binding A.Pos.X}" Y1="{Binding A.Pos.Y}" X2="{Binding B.Pos.X}" Y2="{Binding B.Pos.Y}" 
                      Stroke="Green" StrokeThickness="2"/>-->
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <Line x:Name="ghost_line" Visibility="Collapsed" Stroke="Red" StrokeThickness="2">
                            <!--<Line.RenderTransform>
                                <TranslateTransform x:Name="tt_ghostline"/>
                            </Line.RenderTransform>-->
                        </Line>

                    </Grid>
                </DataTemplate>
            </TabControl.ContentTemplate>
        </TabControl>
    </Grid>
</Window>
